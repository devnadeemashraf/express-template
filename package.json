{
  "name": "express-template",
  "version": "1.0.0",
  "description": "ðŸš€Production-ready Express TypeScript backend template",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --cls src/server.ts",
    "test": "jest --coverage --forceExit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "docker:build": "docker-compose build",
    "docker:dev": "docker-compose up -d",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "keywords": [
    "express",
    "typescript",
    "backend",
    "template",
    "rest-api"
  ],
  "author": "Nadeem Ashraf dev.nadeemashraf06@gmail.com",
  "license": "ISC",
  "engines": {
    "node": ">=23.7.0",
    "npm": ">=11.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "error",
      "no-console": "warn"
    },
    "env": {
      "node": true,
      "jest": true
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devnadeemashraf/express-template.git"
  },
  "bugs": {
    "url": "https://github.com/devnadeemashraf/express-template/issues"
  },
  "homepage": "https://github.com/devnadeemashraf/express-template#readme",
  "devDependencies": {
    "typescript": "^5.7.3"
  }
}
